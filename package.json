{
  "name": "streamsauce",
  "version": "1.0.0",
  "description": "Electron app for playing live MPD streams with authentication",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": ["electron", "live-stream", "mpd", "dash", "shaka"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^31.3.1",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.yourcompany.livestreamplayer",
    "productName": "Live Stream Player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
